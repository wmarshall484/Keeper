{
  "name": "keeper",
  "productName": "Keeper",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "codeowners",
    "github",
    "ownership"
  ],
  "author": "",
  "license": "MIT",
  "description": "A tool for managing and visualizing CODEOWNERS files",
  "devDependencies": {
    "electron": "^39.2.6",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "minimatch": "^10.1.1",
    "monaco-editor": "^0.55.1"
  },
  "build": {
    "appId": "com.keeper.tool",
    "productName": "Keeper",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "style.css",
      "keeper",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.png"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development",
      "icon": "build/icon.png"
    }
  }
}
